{
  "_description": "Database MCP Servers - PostgreSQL, MySQL, SQLite",
  "_usage": "Copy the relevant database section to your .mcp.json",
  "_env_required": ["DATABASE_URL for PostgreSQL", "MYSQL_URL for MySQL", "DB_PATH for SQLite"],

  "mcpServers": {
    "postgresql": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${DATABASE_URL}"
      }
    },
    "postgresql-readonly": {
      "command": "npx",
      "args": ["-y", "@bytebase/dbhub"],
      "env": {
        "DSN": "${DATABASE_URL}"
      }
    },
    "mysql": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-mysql"],
      "env": {
        "MYSQL_CONNECTION_STRING": "${MYSQL_URL}"
      }
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite", "${DB_PATH}"],
      "env": {}
    }
  }
}
