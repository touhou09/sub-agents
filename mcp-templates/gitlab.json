{
  "_description": "GitLab MCP Server - MR, Issue, Repository integration",
  "_usage": "Copy the 'gitlab' section to your .mcp.json",
  "_env_required": ["GITLAB_TOKEN"],

  "mcpServers": {
    "gitlab": {
      "type": "http",
      "url": "https://gitlab.com/api/v4/mcp",
      "headers": {
        "PRIVATE-TOKEN": "${GITLAB_TOKEN}"
      }
    },
    "gitlab-self-hosted": {
      "type": "http",
      "url": "${GITLAB_URL}/api/v4/mcp",
      "headers": {
        "PRIVATE-TOKEN": "${GITLAB_TOKEN}"
      }
    }
  }
}
