{
  "_description": "Monitoring MCP Servers - Sentry, Datadog, Prometheus",
  "_usage": "Copy the relevant monitoring section to your .mcp.json",
  "_env_required": {
    "sentry": ["SENTRY_AUTH_TOKEN"],
    "datadog": ["DATADOG_API_KEY", "DATADOG_APP_KEY"],
    "prometheus": ["PROMETHEUS_URL"]
  },

  "mcpServers": {
    "sentry": {
      "type": "http",
      "url": "https://mcp.sentry.dev/mcp"
    },
    "datadog": {
      "type": "http",
      "url": "https://api.datadoghq.com/mcp",
      "headers": {
        "DD-API-KEY": "${DATADOG_API_KEY}",
        "DD-APPLICATION-KEY": "${DATADOG_APP_KEY}"
      }
    },
    "datadog-eu": {
      "type": "http",
      "url": "https://api.datadoghq.eu/mcp",
      "headers": {
        "DD-API-KEY": "${DATADOG_API_KEY}",
        "DD-APPLICATION-KEY": "${DATADOG_APP_KEY}"
      }
    },
    "prometheus": {
      "type": "http",
      "url": "${PROMETHEUS_URL}/mcp"
    }
  }
}
